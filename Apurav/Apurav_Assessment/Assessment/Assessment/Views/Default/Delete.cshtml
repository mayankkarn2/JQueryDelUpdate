
@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<html>
<head>
	<script src="~/Scripts/jquery-3.4.1.min.js"></script>
	<script>
		$(document).ready(function () {

			//alert("Hello");
			$("#buttonsubmit").click(function () {

				var Empno = $("#Eno").val();
				$ajax({
					type: "POST",
					url: "/Default/DeleteEmp",
					data: "{'Empno':" + Empno + "}",
					contentType: "application/json;charset=utf-8",
					dataType: "JSON",
					async: false,

					success: function (data) {
						alert(data);
					}

				});

			});

		});
	</script>
</head>
<body>
	<table>
		<tr><td>Enter employee number to delete</td> <td><input type="text" id="Eno" /></td></tr>
		
	</table>
	<input type="submit" id="buttonsubmit" />
</body>
</html>